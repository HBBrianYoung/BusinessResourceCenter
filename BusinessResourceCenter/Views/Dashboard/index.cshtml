<h2>DashBoard</h2>
<div class="container">
    <div class="row">
        <div class="col-md-7">
            <h3>Open Workflows</h3>
            <table class="table">
                <tr>
                    <th>
                        Workflow Number
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Requestor Name
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Deadline
                    </th>
                </tr>

                @foreach (var item in Model.ViewAllOpenWorkflows)
                {
                    <tr>
