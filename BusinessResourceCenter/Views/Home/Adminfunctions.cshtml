        <tr>
            <td colspan="2"><input type="button" id="btnSaveNewTime" name="btnSaveNewTime" value="Save" onclick="SaveNewTime()" />
            <input type="hidden" id="hidWFTSID" name="hidWFTSID"  /></td>
